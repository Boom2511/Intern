# Database Configuration
# PostgreSQL connection string
# For Supabase with pgBouncer (production/serverless):
# Use connection_limit=1 and pgbouncer=true for serverless environments
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?pgbouncer=true&connection_limit=1"

# Direct connection (for development - faster but not for serverless):
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# NextAuth Configuration
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# For production, set to your actual domain:
# NEXTAUTH_URL="https://your-domain.vercel.app"

# Application Configuration
NODE_ENV="development"

# LINE Messaging API Configuration
LINE_CHANNEL_ACCESS_TOKEN="your-line-channel-access-token"
LINE_DEFAULT_GROUP_ID="your-line-group-id"

# Cron Job Security
CRON_SECRET="your-random-secret-key-here"
